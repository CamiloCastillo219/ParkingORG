<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/popupContent"
        android:layout_width="309dp"
        android:layout_height="526dp"
        android:background="@drawable/white_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <LinearLayout
        android:layout_width="309dp"
        android:layout_height="526dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@id/popupContent"
        app:layout_constraintEnd_toEndOf="@id/popupContent"
        app:layout_constraintStart_toStartOf="@id/popupContent"
        app:layout_constraintTop_toTopOf="@id/popupContent">

        <!-- Parte Superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingrese_su_pin"
                android:textSize="18sp"
                android:textColor="@color/Negro" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <!-- Cuadros para el PIN -->
                <TextView
                    android:id="@+id/pin_view_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="@color/Empresarialoscuro"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/borderbig"
                    android:layout_margin="4dp" />

                <TextView
                    android:id="@+id/pin_view_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="@color/Empresarialoscuro"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/borderbig"
                    android:layout_margin="4dp" />

                <TextView
                    android:id="@+id/pin_view_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="@color/Empresarialoscuro"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/borderbig"
                    android:layout_margin="4dp" />

                <TextView
                    android:id="@+id/pin_view_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="@color/Empresarialoscuro"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/borderbig"
                    android:layout_margin="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Parte Inferior -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:columnCount="3"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:padding="16dp"
            android:layout_gravity="center">

            <!-- Botones del Numpad -->
            <Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="1"
                android:elevation="0dp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="2"
                android:elevation="0dp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="3"
                android:elevation="0dp" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="4"
                android:elevation="0dp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="5"
                android:elevation="0dp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="6"
                android:elevation="0dp" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="7"
                android:elevation="0dp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="8"
                android:elevation="0dp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="9"
                android:elevation="0dp" />

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/Rojo"
                android:elevation="0dp"
                android:src="@drawable/ic_delete"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/Empresarialclaro"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28sp"
                android:textColor="@color/Blanco"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="0"
                android:elevation="0dp" />

            <ImageButton
                android:id="@+id/button_confirm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/Verde"
                android:elevation="0dp"
                android:src="@drawable/ic_confirm"
                tools:ignore="SpeakableTextPresentCheck" />
        </GridLayout>

        <!-- Botón de regreso -->
        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="8dp"
            android:text="@string/devolverse"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>